---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Soft sage green - primary accent */
    --aw-color-primary: rgb(158 171 149);
    /* Warm taupe - secondary */
    --aw-color-secondary: rgb(139 129 116);
    /* Muted sage accent */
    --aw-color-accent: rgb(158 171 149);

    /* Soft charcoal for text */
    --aw-color-text-heading: rgb(62 58 52);
    --aw-color-text-default: rgb(82 77 69);
    --aw-color-text-muted: rgb(120 112 102);

    /* Soft cream background - NOT white */
    --aw-color-bg-page: rgb(253 253 248);

    --aw-color-bg-page-dark: rgb(28 32 30);

    ::selection {
      background-color: rgba(158, 171, 149, 0.25);
      color: rgb(62 58 52);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Softer sage in dark mode */
    --aw-color-primary: rgb(158 171 149);
    /* Warmer taupe in dark */
    --aw-color-secondary: rgb(139 129 116);
    --aw-color-accent: rgb(158 171 149);

    /* Soft warm text on dark */
    --aw-color-text-heading: rgb(238 235 229);
    --aw-color-text-default: rgb(220 216 208);
    --aw-color-text-muted: rgb(180 174 164);

    /* Deep warm grey, not pure black */
    --aw-color-bg-page: rgb(32 30 28);

    ::selection {
      background-color: rgba(158, 171, 149, 0.3);
      color: rgb(238 235 229);
    }
  }
</style>
