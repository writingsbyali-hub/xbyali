---
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'xbyali - a slow, growing archive',
  description: 'gatherings of fragments, reflections, and ongoing work',
};
---

<Layout metadata={metadata}>
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-b from-stone-800 via-stone-700 to-stone-600">

    <!-- Cat Image Container -->
    <div class="absolute inset-0 flex items-center justify-center opacity-30">
      <img
        src="/cat-hero.jpg"
        alt="A contemplative cat in sunlight"
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Soft gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-stone-800/90 via-stone-800/50 to-transparent"></div>

    <!-- Content -->
    <div class="relative z-10 max-w-4xl mx-auto px-8 py-32 text-center">
      <h1 class="text-7xl md:text-8xl lg:text-9xl font-extralight tracking-tight text-stone-100 mb-8 leading-none">
        xbyali
      </h1>

      <p class="text-2xl md:text-3xl lg:text-4xl font-extralight text-stone-200 mb-6 leading-relaxed">
        a slow, growing archive.
      </p>

      <p class="text-base md:text-lg text-stone-300 mb-16 max-w-2xl mx-auto font-light leading-relaxed">
        gatherings of fragments, reflections, and ongoing work
      </p>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a
          href={getPermalink('/library')}
          class="group inline-flex items-center px-10 py-4 text-base font-light rounded-full bg-primary/80 text-stone-50 hover:bg-primary transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
        >
          <span>enter the library</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>

        <a
          href={getPermalink('/about')}
          class="inline-flex items-center px-10 py-4 text-base font-light rounded-full border-2 border-stone-400 text-stone-200 hover:border-stone-300 hover:text-stone-100 transition-all duration-300 hover:scale-105"
        >
          about
        </a>
      </div>
    </div>

    <!-- Gentle scroll indicator -->
    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce opacity-40">
      <svg class="w-6 h-6 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

</Layout>

<style>
  /* Subtle animation for the cat image */
  @keyframes gentle-float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  img {
    animation: gentle-float 6s ease-in-out infinite;
  }
</style>
