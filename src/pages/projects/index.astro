---
import Layout from '~/layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Projects - X by Ali',
  description: 'Active and completed studio engagements from the X by Ali practice.',
};

const projects = (await getCollection('projects'))
  .slice()
  .sort((a, b) => {
    const dateA = a.data.launchDate ? new Date(a.data.launchDate).valueOf() : 0;
    const dateB = b.data.launchDate ? new Date(b.data.launchDate).valueOf() : 0;
    return dateB - dateA;
  });
---
<Layout metadata={metadata}>
  <section class="mx-auto max-w-6xl px-6 py-24">
    <div class="max-w-3xl">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-neutral-500">Studio Work</p>
      <h1 class="mt-4 text-4xl font-semibold text-neutral-900 dark:text-white">Projects</h1>
      <p class="mt-4 text-base text-neutral-600 dark:text-neutral-300">
        Launch environments, sonic identities, and experiential systems shaped alongside founders, curators, and teams in motion.
      </p>
    </div>
    <div class="mt-14 grid gap-8 md:grid-cols-2">
      {projects.map((project) => (
        <article class="flex h-full flex-col rounded-3xl border border-neutral-200 bg-white p-6 shadow-[0_20px_45px_-30px_rgba(15,23,42,0.35)] transition hover:-translate-y-1 hover:border-neutral-900 dark:border-neutral-800 dark:bg-neutral-900 dark:shadow-none dark:hover:border-white">
          <div class="flex items-center gap-3 text-xs font-semibold uppercase tracking-[0.25em] text-neutral-500 dark:text-neutral-300">
            <span>{project.data.status}</span>
            {project.data.launchDate && (
              <span class="rounded-full border border-neutral-300 px-2 py-0.5 text-[10px] tracking-[0.2em] dark:border-neutral-600">
                {new Intl.DateTimeFormat('en', { month: 'short', year: 'numeric' }).format(project.data.launchDate)}
              </span>
            )}
          </div>
          <h2 class="mt-4 text-2xl font-semibold text-neutral-900 dark:text-white">{project.data.title}</h2>
          <p class="mt-3 text-sm leading-relaxed text-neutral-600 dark:text-neutral-300">{project.data.summary}</p>
          <div class="mt-auto pt-6">
            <a class="inline-flex items-center gap-2 text-sm font-semibold text-neutral-900 transition hover:gap-3 dark:text-white" href={project.data.link ?? getPermalink('/projects')}>
              View project
              <svg class="h-4 w-4" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                <path d="M3 13L13 3M13 3H5M13 3V11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
</Layout>
